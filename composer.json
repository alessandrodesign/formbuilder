{
  "name": "alessandrodesign/formbuilder",
  "description": "Interface de criação de formulário com token CSRF",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "AlessandroDesign\\FormBuilder\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Alessandro P Souza",
      "email": "eu@alessandrodesign.com.br"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": "^8.3",
    "ext-dom": "*",
    "ext-intl": "*",
    "psr/simple-cache": "^3.0"
  },
  "require-dev": {
    "symfony/var-dumper": "^7.1",
    "phpunit/phpunit": "^11.3",
    "php-coveralls/php-coveralls": "^v2.7"
  },
  "scripts": {
    "test": "./vendor/bin/phpunit tests",
    "test-coverage": "./vendor/bin/phpunit --coverage-clover=coverage.xml tests",
    "coverage": "composer run test-coverage && coveralls"
  }
}